<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1372&q=80);">
    <h1 id="ingr">Make <strong>A</strong> Cocktail</h1>
    <p>It's always happy hour.</p>
    <% if !current_user %>
      <%= link_to "Sign-up", new_user_registration_path, class: "btn btn-blue"%>
    <% else %>
      <p>Welcome <%= current_user.first_name %>!</p>
    <% end %>
</div>

<div class="cards">
  <% if current_user %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.pexels.com/photos/1232152/pexels-photo-1232152.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260)">
      <%= link_to "New Cocktail +", new_cocktail_path, class: "btn btn-blue"%>
    </div>
  <% end %>

  <% @cocktails.each do |c| %>
    <%= link_to cocktail_path(c.id) do %>
      <div class="card-category card1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= c.photo %> )">
        <%= c.name %>
      </div>
    <% end %>
  <% end %>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
<br>
